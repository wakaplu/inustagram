<li>  
  <%= image_for(note.user) %>
  <span class="user-name">
    <%= note.user.name %>
  </span>
<br><br>
  <span class="content">
    <%= image_tag note.image, width:250 %><br>
    <%= note.content %>
    <div class="like-link" data-noteid="<%= note.id %>" class='like-link' >
  <!-- 以下をパーシャルに移動してください -->
      <%= render "likes/like_links",note: note%>
      <!-- ここまでパーシャルに移動 -->
</div>

<div>
  <small>
    <%= link_to note.likes.count, liking_users_note_path(note.id), data: {noteid: note.id }, class:'like-count' %>人がいいね！といっています

  </small>
</div>

    <% if current_user?(note.user) %>
  <%= link_to "編集", edit_note_path(note.id) %>
      <%= link_to "削除", note_path(note.id), method: "delete", "data-confirm" => "本当に削除しますか？" %>
<% end %>

  </span>
  <span>
    <%= note.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
  </span>
</li>


