source 'https://rubygems.org'

gem 'devise', '3.5.1'

gem 'hirb', '0.7.3'
# railsのgem
gem 'rails', '4.2.1'
# SCSSスタイルシートのgem
gem 'sass-rails', '5.0.6'
# JavaScript assetの圧縮用のgem
gem 'uglifier', '2.7.1'
# CoffeeScriptのgem
gem 'coffee-rails', '4.1.0'
# jQueryのgem
gem 'jquery-rails', '4.0.3'
# Turbolinksのgem
gem 'turbolinks', '2.5.3'
# rails consoleを使いやすくするgem
gem 'pry-rails', '0.3.4'
# hirbの出力を日本語に対応させるgem
gem 'hirb-unicode'
# 画像アップロード
gem "carrierwave"
# アイコンフォント
gem "font-awesome-rails"

group :development do
  gem 'sqlite3', '1.3.10'
end
group :production do
  gem 'pg'
  gem 'rails_12factor'
end